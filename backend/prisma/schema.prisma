generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlockedSite {
  id          String   @id @default(cuid())
  domain      String   @unique
  pattern     String?
  reason      String?
  reportCount Int      @default(1)
  score       Int      @default(0) // upvotes - downvotes
  isBanned    Boolean  @default(false) // Community approved or admin banned
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reports     Report[]
  votes       Vote[]
}

model Report {
  id          String      @id @default(cuid())
  siteId      String
  site        BlockedSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
  fingerprint String
  reason      String?
  url         String?
  createdAt   DateTime    @default(now())

  @@index([siteId])
  @@index([fingerprint])
}

model Vote {
  id          String      @id @default(cuid())
  siteId      String
  site        BlockedSite @relation(fields: [siteId], references: [id], onDelete: Cascade)
  fingerprint String
  value       Int // 1 (upvote = AI slop) or -1 (downvote = not AI slop)
  createdAt   DateTime    @default(now())

  @@unique([siteId, fingerprint])
  @@index([siteId])
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed with bcrypt
  createdAt DateTime @default(now())
}

model AdminSession {
  id        String   @id @default(cuid())
  token     String   @unique
  username  String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}
