{
  "manifest_version": 3,
  "name": "SlopSearch",
  "description": "Clean AI slop content from Google/Bing search results",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://www.google.com/*",
    "*://www.google.com.tr/*",
    "*://www.bing.com/*",
    "*://api.slopsearch.deadnetguard.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/search*",
        "*://www.google.com.tr/search*",
        "*://www.bing.com/search*"
      ],
      "js": ["src/content/index.tsx"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
