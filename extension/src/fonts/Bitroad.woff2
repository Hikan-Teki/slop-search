  <script>
    const API_URL = 'https://api.deadnetguard.com';

    async function loadBanlist() {
      const grid = document.getElementById('banlist-grid');
      const totalBanned = document.getElementById('total-banned');
      const totalReports = document.getElementById('total-reports');
      const totalVotes = document.getElementById('total-votes');

      try {
        // Fetch banlist and stats in parallel
        const [banlistRes, statsRes] = await Promise.all([
          fetch(`${API_URL}/api/banlist`),
          fetch(`${API_URL}/api/stats`)
        ]);

        const banlistData = await banlistRes.json();
        const stats = await statsRes.json();

        // Extract channels array from response
        const channels = banlistData.channels || [];

        // Update stats
        totalBanned.textContent = channels.length || '0';
        totalReports.textContent = stats.totalReports || '0';
        totalVotes.textContent = stats.totalVotes || '0';

        // Render banlist
        if (channels.length === 0) {
          grid.innerHTML = '<div class="banlist-empty">No channels banned yet. Be the first to report AI slop!</div>';
          return;
        }

        grid.innerHTML = channels.map(channel => `
          <div class="banlist-item">
            <span class="icon">üö´</span>
            <span class="name" title="${escapeHtml(channel.name)}">${escapeHtml(channel.name)}</span>
          </div>
        `).join('');

      } catch (error) {
        console.error('Failed to load banlist:', error);
        grid.innerHTML = '<div class="banlist-empty">Failed to load kill list. API might be down.</div>';
        totalBanned.textContent = '?';
        totalReports.textContent = '?';
        totalVotes.textContent = '?';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Load banlist when page loads
    document.addEventListener('DOMContentLoaded', loadBanlist);
  </script>
</body>
</html>
